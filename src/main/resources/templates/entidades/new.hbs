{{#partial "contenido"}}

    <h2>Crear Entidad</h2>

    <form class="formulario" action="/entidades" method="post">

      <div class="form-group">
		<label for="nombreFicticio">Nombre Entidad</label>
		<input type="text" placeholder="Ingrese un nombre ficticio para la entidad" name="nombreFicticio">
	  </div>

      <div class="form-group">		
		<label for="montoEsperado">Monto Esperado</label>
		<input type="number" placeholder="Monto esperado de la entidad" name="montoEsperado">
	  </div>

      <div class="form-group">
        <label for="categoria">Categoría</label>
        <select class="input-select" name="categoria">
          <option selected disabled>Seleccionar</option>
          {{#each categorias}}
            <option value="{{id}}">{{nombre}}</option>
          {{/each}}
        </select>
      </div>

      <div>
      	<label for="tipo_entidad">Tipo de Entidad</label>
  			<select name="tipo_entidad" id="tipo_entidad">
  				<option value="0" selected>Seleccionar</option>
      			<option value="1">Entidad Base</option>
      			<option value="2">Entidad Jurídica</option>
  			</select>
        <br>
        <label for="descripcion">Descripción</label>
        <input id="descripcion_input" type="text" placeholder="Descripción" name="descripcion" disabled/>
        <br>
        <label for="razonSocial">Razón Social</label>
        <input id="razonsocial_input" type="text" placeholder="Razón Social" name="razonSocial" disabled/>
        <br>
        <label for="cuit">C.U.I.T.</label>
        <input id="cuit_input" type="text" placeholder="C.U.I.T." name="cuit" disabled/>
        <br>
        <label for="codigoInscripcionIGJ">Codigo Inscripción IGJ</label>
        <input id="codigoinscripcionigj_input" type="text" placeholder="Codigo Inscripción IGJ" name="codigoInscripcionIGJ" disabled/>
      </div>

      <input class="btn btn-primary" type="submit" value="Crear Entidad">
			<a href="/entidades" class="btn btn-default" type="button">Cancelar</a>

		</form>

{{/partial}}

{{>layout.hbs}}